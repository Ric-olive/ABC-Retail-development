@model ABC_Retail.Models.Product

<h2>Add New Product</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="RowKey"></label>
        <input asp-for="RowKey" class="form-control" readonly />
        <span asp-validation-for="RowKey" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="PartitionKey" />


    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category"></label>
        <input asp-for="Category" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
    </div>

    <div class="form-group">
        <label asp-for="StockQty"></label>
        <input asp-for="StockQty" class="form-control" type="number" />
    </div>

   @*  <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
    </div> *@

    <div class="form-group">
        <label for="ImageFile">Upload Image</label>
        <input type="file" asp-for="ImageFile" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

