@model List<ABC_Retail.Models.Product>

@{
    ViewData["Title"] = "View Products - Azure Table Storage";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h4><i class="fas fa-table"></i> Products from Azure Table Storage</h4>
                    <a href="@Url.Action("AddProduct")" class="btn btn-light btn-sm">
                        <i class="fas fa-plus"></i> Add New Product
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>Category</th>
                                        <th>Price</th>
                                        <th>Stock</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model)
                                    {
                                        <tr>
                                            <td>
                                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                                {
                                                    <img src="@product.ImageUrl" alt="@product.Name" 
                                                         class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;">
                                                }
                                                else
                                                {
                                                    <div class="bg-light d-flex align-items-center justify-content-center" 
                                                         style="width: 50px; height: 50px;">
                                                        <i class="fas fa-image text-muted"></i>
                                                    </div>
                                                }
                                            </td>
                                            <td>
                                                <strong>@product.Name</strong>
                                                @if (!string.IsNullOrEmpty(product.Description))
                                                {
                                                    <br><small class="text-muted">@product.Description.Substring(0, Math.Min(50, product.Description.Length))...</small>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@product.Category</span>
                                            </td>
                                            <td>
                                                <strong class="text-success">@product.Price.ToString("C")</strong>
                                            </td>
                                            <td>
                                                @if (product.StockQty > 10)
                                                {
                                                    <span class="badge bg-success">@product.StockQty</span>
                                                }
                                                else if (product.StockQty > 0)
                                                {
                                                    <span class="badge bg-warning">@product.StockQty</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Out of Stock</span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @(product.Timestamp?.ToString("MMM dd, yyyy") ?? "N/A")
                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <button type="button" class="btn btn-outline-info" 
                                                            onclick="viewProduct('@product.RowKey')">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <a href="@Url.Action("EditProduct", new { id = product.RowKey })" 
                                                       class="btn btn-outline-warning">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="fas fa-info-circle"></i>
                                Showing @Model.Count products from Azure Table Storage
                            </small>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No products found</h5>
                            <p class="text-muted">Start by adding your first product to Azure Table Storage</p>
                            <a href="@Url.Action("AddProduct")" class="btn btn-info">
                                <i class="fas fa-plus"></i> Add First Product
                            </a>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
            </div>

            <!-- Information Panel -->
            <div class="card mt-4">
                <div class="card-header bg-light">
                    <h6><i class="fas fa-info-circle"></i> Azure Table Storage - Product Data</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Storage Details:</strong></p>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-check text-success"></i> Table Name: "Products"</li>
                                <li><i class="fas fa-check text-success"></i> Partition Key: "Retail"</li>
                                <li><i class="fas fa-check text-success"></i> Row Key: Unique GUID</li>
                                <li><i class="fas fa-check text-success"></i> Schema-less NoSQL storage</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Features:</strong></p>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-check text-success"></i> Automatic table creation</li>
                                <li><i class="fas fa-check text-success"></i> Scalable and fast queries</li>
                                <li><i class="fas fa-check text-success"></i> Integrated with Blob Storage for images</li>
                                <li><i class="fas fa-check text-success"></i> Real-time data access</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function viewProduct(rowKey) {
        // Implement product view functionality
        alert('View product: ' + rowKey + '\n(This would open a detailed view)');
    }

    function editProduct(rowKey) {
        // Implement product edit functionality
        alert('Edit product: ' + rowKey + '\n(This would open an edit form)');
    }
</script>
