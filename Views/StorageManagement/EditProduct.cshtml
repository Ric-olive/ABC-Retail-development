@model ABC_Retail.Models.Product

@{
    ViewData["Title"] = "Edit Product - Azure Table Storage";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h4><i class="fas fa-edit"></i> Edit Product - Azure Table Storage</h4>
                    <a href="@Url.Action("ViewProducts")" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-left"></i> Back to Products
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    <form asp-action="EditProduct" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="PartitionKey" />
                        <input type="hidden" asp-for="RowKey" />
                        <input type="hidden" asp-for="Timestamp" />
                        <input type="hidden" asp-for="ETag" />
                        <input type="hidden" asp-for="ImageUrl" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="RowKey" class="form-label">Product ID</label>
                                    <input asp-for="RowKey" class="form-control" readonly style="background-color: #f8f9fa;" />
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">Product Name</label>
                                    <input asp-for="Name" class="form-control" placeholder="Enter product name" required />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Price" class="form-label">Price</label>
                                    <div class="input-group">
                                        <span class="input-group-text">R</span>
                                        <input asp-for="Price" class="form-control" placeholder="0.00" step="0.01" type="number" required />
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Category" class="form-label">Category</label>
                                    <select asp-for="Category" class="form-select" required>
                                        <option value="">Select Category</option>
                                        <option value="Electronics">Electronics</option>
                                        <option value="Clothing">Clothing</option>
                                        <option value="Books">Books</option>
                                        <option value="Home & Garden">Home & Garden</option>
                                        <option value="Sports">Sports</option>
                                        <option value="Toys">Toys</option>
                                        <option value="Health & Beauty">Health & Beauty</option>
                                        <option value="Automotive">Automotive</option>
                                        <option value="Food & Beverages">Food & Beverages</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="Category" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="StockQty" class="form-label">Stock Quantity</label>
                                    <input asp-for="StockQty" class="form-control" placeholder="0" type="number" min="0" required />
                                    <span asp-validation-for="StockQty" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter product description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Current Image</label>
                                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                    {
                                        <div class="mb-2">
                                            <img src="@Model.ImageUrl" alt="Current product image" class="img-thumbnail" style="max-height: 150px;" />
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-info">
                                            <i class="fas fa-info-circle"></i> No image currently set
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ImageFile" class="form-label">Update Product Image</label>
                                    <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
                                    <small class="form-text text-muted">Upload a new image to replace the current one. Leave empty to keep current image.</small>
                                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("ViewProducts")" class="btn btn-secondary me-md-2">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Update Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Information Panel -->
            <div class="card mt-4">
                <div class="card-header bg-light">
                    <h6><i class="fas fa-info-circle"></i> Product Update Information</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>What happens when you update:</strong></p>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-check text-success"></i> Product data updated in Azure Table Storage</li>
                                <li><i class="fas fa-check text-success"></i> Admin activity logged to queue</li>
                                <li><i class="fas fa-check text-success"></i> Inventory changes tracked if stock quantity modified</li>
                                <li><i class="fas fa-check text-success"></i> New image uploaded to Blob Storage if provided</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Queue Messages Generated:</strong></p>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-arrow-right text-info"></i> Admin Activity Queue</li>
                                <li><i class="fas fa-arrow-right text-info"></i> Inventory Management Queue (if stock changed)</li>
                                <li><i class="fas fa-arrow-right text-info"></i> Operation logged to Azure Files</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
