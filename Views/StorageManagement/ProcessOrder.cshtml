@{
    ViewData["Title"] = "Process Order - Azure Queue Storage";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h4><i class="fas fa-shopping-cart"></i> Queue Order for Processing - Azure Queue Storage</h4>
                </div>
                <div class="card-body">
                    <form asp-action="ProcessOrder" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="orderId" class="form-label">Order ID</label>
                                    <input type="text" class="form-control" id="orderId" name="orderId" 
                                           placeholder="ORD-001" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="customerId" class="form-label">Customer ID</label>
                                    <input type="text" class="form-control" id="customerId" name="customerId" 
                                           placeholder="customer@email.com" required>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="totalAmount" class="form-label">Total Amount</label>
                            <div class="input-group">
                                <span class="input-group-text">R</span>
                                <input type="number" class="form-control" id="totalAmount" name="totalAmount" 
                                       placeholder="0.00" step="0.01" min="0" required>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index")" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left"></i> Back to Dashboard
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-plus"></i> Add to Queue
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Information Panel -->
            <div class="card mt-4">
                <div class="card-header bg-light">
                    <h6><i class="fas fa-info-circle"></i> Azure Queue Storage - Order Processing</h6>
                </div>
                <div class="card-body">
                    <p><strong>What happens when you queue an order:</strong></p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success"></i> Order message is added to "order-processing" queue</li>
                        <li><i class="fas fa-check text-success"></i> Message includes order details and timestamp</li>
                        <li><i class="fas fa-check text-success"></i> Queue operation is logged to Azure Files</li>
                        <li><i class="fas fa-check text-success"></i> Order can be processed asynchronously</li>
                        <li><i class="fas fa-check text-success"></i> Processing status is tracked</li>
                    </ul>
                    <div class="alert alert-warning mt-3">
                        <small><strong>Queue Name:</strong> order-processing<br>
                        <strong>Message Format:</strong> JSON with order details<br>
                        <strong>Processing:</strong> FIFO (First In, First Out)</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
